<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0.0-beta</PackageVersion>
    <PackageId>GT.Framework.Web</PackageId>
    <OutputPath>nupkg</OutputPath>
    <Title>GT Web开发框架模板</Title>
    <Authors>GT.Niltor</Authors>
    <Description>基于Asp.net core 与 angular的项目模板</Description>
    <PackageTags>templates;web;angular;asp.net core</PackageTags>
    <TargetFramework>net5.0</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>

    <Copyright>Geethin</Copyright>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/geethin</PackageProjectUrl>
    <RepositoryUrl>https://github.com/geethin/framework</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <PackageIcon>logo.jpg</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**" />
    <Compile Remove="**\*" />
    <None Include="logo.jpg">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>
</Project>